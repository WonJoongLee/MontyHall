<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hall">

    <LinearLayout
        android:id="@+id/linearlayout_host"
        android:layout_width="300dp"
        android:layout_height="140dp"
        android:layout_marginTop="60dp"
        android:clickable="true"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_host"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/jalnan"
            android:lineSpacingMultiplier="1.7"
            android:text="다음으로 넘어가시려면\n말풍선을 클릭해주세요!"
            android:textColor="@android:color/white"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlayout_doors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="150dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearlayout_host">

        <ImageButton
            android:background="?selectableItemBackground"
            android:id="@+id/iv_door1"
            android:layout_width="90dp"
            android:layout_height="140dp"
            android:clickable="true"
            android:scaleType="fitXY"
            android:src="@drawable/door" />

        <ImageButton
            android:background="?selectableItemBackground"
            android:id="@+id/iv_door2"
            android:layout_width="90dp"
            android:layout_height="140dp"
            android:clickable="true"
            android:scaleType="fitXY"
            android:src="@drawable/door" />

        <ImageButton
            android:background="?selectableItemBackground"
            android:id="@+id/iv_door3"
            android:layout_width="90dp"
            android:layout_height="140dp"
            android:clickable="true"
            android:scaleType="fitXY"
            android:src="@drawable/door" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>